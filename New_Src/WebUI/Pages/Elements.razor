@page "/elements"
@using WebUI.Services
@inject ProjectService ProjectService
@inject PivotService PivotService
@inject ISnackbar Snackbar

<PageTitle>ICP - Elements</PageTitle>

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-4">
    <MudPaper Elevation="0" Class="pa-4 mb-4">
        <div class="d-flex justify-space-between align-center">
            <div>
                <MudText Typo="Typo.h4" Class="fw-bold">Elements Configuration</MudText>
                <MudText Typo="Typo.body2" Class="mud-text-secondary">
                    Manage element settings, units, and oxide factors
                </MudText>
            </div>
            <MudButton Variant="Variant.Filled"
                       Color="Color.Primary"
                       StartIcon="@Icons.Material.Filled.Save"
                       OnClick="SaveChanges"
                       Disabled="_isSaving">
                Save Changes
            </MudButton>
        </div>
    </MudPaper>

    @if (_projectId == null)
    {
        <MudAlert Severity="Severity.Warning">
            Please select a project first.
        </MudAlert>
    }
    else
    {
        <MudGrid>
            @* Element List *@
            <MudItem xs="12" md="8">
                <MudPaper Elevation="2" Class="pa-4">
                    <MudText Typo="Typo.h6" Class="mb-4">
                        <MudIcon Icon="@Icons.Material.Filled.Science" Class="me-2" />
                        Available Elements
                    </MudText>

                    @if (_isLoading)
                    {
                        <div class="d-flex justify-center align-center" style="min-height: 200px;">
                            <MudProgressCircular Indeterminate="true" Size="Size.Large" />
                        </div>
                    }
                    else
                    {
                        <MudTable T="ElementConfig" 
                                  Items="@_elements"
                                  Hover="true"
                                  Dense="true"
                                  FixedHeader="true"
                                  Height="450px"
                                  @bind-SelectedItem="_selectedElement">
                            <HeaderContent>
                                <MudTh>Element</MudTh>
                                <MudTh>Symbol</MudTh>
                                <MudTh>Unit</MudTh>
                                <MudTh>Oxide Factor</MudTh>
                                <MudTh>Min Range</MudTh>
                                <MudTh>Max Range</MudTh>
                                <MudTh>Active</MudTh>
                            </HeaderContent>
                            <RowTemplate Context="element">
                                <MudTd>@element.Name</MudTd>
                                <MudTd><MudChip T="string" Size="Size.Small" Color="Color.Primary">@element.Symbol</MudChip></MudTd>
                                <MudTd>@element.Unit</MudTd>
                                <MudTd>@element.OxideFactor.ToString("F4")</MudTd>
                                <MudTd>@element.MinRange.ToString("F2")</MudTd>
                                <MudTd>@element.MaxRange.ToString("F2")</MudTd>
                                <MudTd>
                                    <MudSwitch T="bool" @bind-Value="element.IsActive"
                                               Color="Color.Primary" />
                                </MudTd>
                            </RowTemplate>
                        </MudTable>
                    }
                </MudPaper>
            </MudItem>

            @* Element Details / Editor *@
            <MudItem xs="12" md="4">
                <MudPaper Elevation="2" Class="pa-4">
                    <MudText Typo="Typo.h6" Class="mb-4">
                        <MudIcon Icon="@Icons.Material.Filled.Edit" Class="me-2" />
                        Edit Element
                    </MudText>

                    @if (_selectedElement == null)
                    {
                        <MudAlert Severity="Severity.Info">
                            Select an element to edit its properties.
                        </MudAlert>
                    }
                    else
                    {
                        <MudTextField @bind-Value="_selectedElement.Name"
                                      Label="Element Name"
                                      Variant="Variant.Outlined"
                                      Class="mb-3" />

                        <MudTextField @bind-Value="_selectedElement.Symbol"
                                      Label="Symbol"
                                      Variant="Variant.Outlined"
                                      Class="mb-3" />

                        <MudSelect T="string"
                                   Label="Unit"
                                   @bind-Value="_selectedElement.Unit"
                                   Variant="Variant.Outlined"
                                   Class="mb-3">
                            <MudSelectItem Value="@("%")">% (Percent)</MudSelectItem>
                            <MudSelectItem Value="@("ppm")">ppm</MudSelectItem>
                            <MudSelectItem Value="@("ppb")">ppb</MudSelectItem>
                            <MudSelectItem Value="@("mg/L")">mg/L</MudSelectItem>
                            <MudSelectItem Value="@("g/L")">g/L</MudSelectItem>
                        </MudSelect>

                        <MudNumericField @bind-Value="_selectedElement.OxideFactor"
                                         Label="Oxide Factor"
                                         Variant="Variant.Outlined"
                                         Step="0.0001M"
                                         Format="F4"
                                         Class="mb-3" />

                        <MudNumericField @bind-Value="_selectedElement.MinRange"
                                         Label="Min Detection Range"
                                         Variant="Variant.Outlined"
                                         Step="0.01M"
                                         Class="mb-3" />

                        <MudNumericField @bind-Value="_selectedElement.MaxRange"
                                         Label="Max Detection Range"
                                         Variant="Variant.Outlined"
                                         Step="1M"
                                         Class="mb-3" />

                        <MudNumericField @bind-Value="_selectedElement.DiffThreshold"
                                         Label="Diff Threshold (%)"
                                         Variant="Variant.Outlined"
                                         Step="1M"
                                         Class="mb-3" />

                        <MudSwitch @bind-Value="_selectedElement.IsActive"
                                   Label="Active"
                                   Color="Color.Primary"
                                   Class="mb-3" />

                        <MudButton Variant="Variant.Filled"
                                   Color="Color.Primary"
                                   FullWidth="true"
                                   StartIcon="@Icons.Material.Filled.Refresh"
                                   OnClick="ResetElement">
                            Reset to Default
                        </MudButton>
                    }
                </MudPaper>

                @* Oxide Factor Calculator *@
                <MudPaper Elevation="2" Class="pa-4 mt-4">
                    <MudText Typo="Typo.h6" Class="mb-4">
                        <MudIcon Icon="@Icons.Material.Filled.Calculate" Class="me-2" />
                        Oxide Factor Calculator
                    </MudText>

                    <MudTextField @bind-Value="_calcElement"
                                  Label="Element Symbol"
                                  Variant="Variant.Outlined"
                                  Placeholder="e.g., Si, Al, Fe"
                                  Class="mb-3" />

                    <MudTextField @bind-Value="_calcOxide"
                                  Label="Oxide Formula"
                                  Variant="Variant.Outlined"
                                  Placeholder="e.g., SiO2, Al2O3, Fe2O3"
                                  Class="mb-3" />

                    <MudButton Variant="Variant.Outlined"
                               Color="Color.Primary"
                               FullWidth="true"
                               StartIcon="@Icons.Material.Filled.Calculate"
                               OnClick="CalculateOxideFactor"
                               Class="mb-3">
                        Calculate Factor
                    </MudButton>

                    @if (_calculatedFactor.HasValue)
                    {
                        <MudAlert Severity="Severity.Success">
                            Oxide Factor: <strong>@_calculatedFactor.Value.ToString("F6")</strong>
                        </MudAlert>
                    }
                </MudPaper>
            </MudItem>
        </MudGrid>

        @* Common Oxide Factors Reference *@
        <MudPaper Elevation="2" Class="pa-4 mt-4">
            <MudExpansionPanels>
                <MudExpansionPanel Text="Common Oxide Factors Reference">
                    <MudGrid>
                        @foreach (var oxide in _commonOxides)
                        {
                            <MudItem xs="6" sm="4" md="2">
                                <MudPaper Elevation="0" Class="pa-2 text-center" Style="background: var(--mud-palette-background-grey);">
                                    <MudText Typo="Typo.body2" Class="fw-medium">@oxide.Oxide</MudText>
                                    <MudText Typo="Typo.caption">@oxide.Factor.ToString("F4")</MudText>
                                </MudPaper>
                            </MudItem>
                        }
                    </MudGrid>
                </MudExpansionPanel>
            </MudExpansionPanels>
        </MudPaper>
    }
</MudContainer>

@code {
    [SupplyParameterFromQuery]
    public Guid? projectId { get; set; }

    private Guid? _projectId;
    private List<ElementConfig> _elements = new();
    private ElementConfig? _selectedElement;
    private bool _isLoading = false;
    private bool _isSaving = false;
    private string _calcElement = "";
    private string _calcOxide = "";
    private decimal? _calculatedFactor;
    private List<OxideReference> _commonOxides = new();

    protected override async Task OnInitializedAsync()
    {
        _projectId = projectId ?? ProjectService.CurrentProjectId;
        InitializeCommonOxides();
        if (_projectId.HasValue)
        {
            await LoadElements();
        }
    }

    private void InitializeCommonOxides()
    {
        _commonOxides = new List<OxideReference>
        {
            new("SiO2", 2.1393m),
            new("Al2O3", 1.8895m),
            new("Fe2O3", 1.4297m),
            new("FeO", 1.2865m),
            new("CaO", 1.3992m),
            new("MgO", 1.6583m),
            new("Na2O", 1.3480m),
            new("K2O", 1.2046m),
            new("TiO2", 1.6681m),
            new("P2O5", 2.2914m),
            new("MnO", 1.2912m),
            new("Cr2O3", 1.4615m)
        };
    }

    private async Task LoadElements()
    {
        _isLoading = true;
        StateHasChanged();

        try
        {
            var result = await PivotService.GetElementsAsync(_projectId!.Value);
            if (result.Succeeded && result.Data != null)
            {
                _elements = result.Data.Select(e => new ElementConfig
                {
                    Name = e,
                    Symbol = e.Replace("2O3", "").Replace("O2", "").Replace("O", "").Replace("2", "").Replace("3", "").Replace("5", ""),
                    Unit = "%",
                    OxideFactor = GetDefaultOxideFactor(e),
                    MinRange = 0.01m,
                    MaxRange = 100m,
                    DiffThreshold = 10m,
                    IsActive = true
                }).ToList();
            }
        }
        finally
        {
            _isLoading = false;
        }
    }

    private decimal GetDefaultOxideFactor(string element)
    {
        var oxide = _commonOxides.FirstOrDefault(o => o.Oxide.Equals(element, StringComparison.OrdinalIgnoreCase));
        return oxide?.Factor ?? 1.0m;
    }

    private async Task SaveChanges()
    {
        _isSaving = true;
        StateHasChanged();

        try
        {
            // Save to API
            await Task.Delay(500); // Simulate API call
            Snackbar.Add("Element settings saved successfully", Severity.Success);
        }
        finally
        {
            _isSaving = false;
        }
    }

    private void ResetElement()
    {
        if (_selectedElement != null)
        {
            _selectedElement.OxideFactor = GetDefaultOxideFactor(_selectedElement.Name);
            _selectedElement.MinRange = 0.01m;
            _selectedElement.MaxRange = 100m;
            _selectedElement.DiffThreshold = 10m;
            Snackbar.Add("Element reset to default values", Severity.Info);
        }
    }

    private void CalculateOxideFactor()
    {
        if (string.IsNullOrWhiteSpace(_calcElement) || string.IsNullOrWhiteSpace(_calcOxide))
        {
            Snackbar.Add("Please enter both element and oxide formula", Severity.Warning);
            return;
        }

        // Simple oxide factor calculation based on atomic masses
        var atomicMasses = new Dictionary<string, decimal>
        {
            { "Si", 28.0855m },
            { "Al", 26.9815m },
            { "Fe", 55.8450m },
            { "Ca", 40.0780m },
            { "Mg", 24.3050m },
            { "Na", 22.9898m },
            { "K", 39.0983m },
            { "Ti", 47.8670m },
            { "P", 30.9738m },
            { "Mn", 54.9380m },
            { "O", 15.9994m },
            { "Cr", 51.9961m },
            { "Zn", 65.3800m },
            { "Cu", 63.5460m },
            { "Pb", 207.2000m },
            { "Ba", 137.3270m },
            { "Sr", 87.6200m }
        };

        if (!atomicMasses.TryGetValue(_calcElement, out var elementMass))
        {
            Snackbar.Add($"Unknown element: {_calcElement}", Severity.Error);
            return;
        }

        // Parse oxide formula and calculate molecular mass
        // Simple parsing - this is a simplified version
        var oxide = _commonOxides.FirstOrDefault(o => o.Oxide.Equals(_calcOxide, StringComparison.OrdinalIgnoreCase));
        if (oxide != null)
        {
            _calculatedFactor = oxide.Factor;
        }
        else
        {
            // Fallback calculation
            _calculatedFactor = 1.0m;
            Snackbar.Add("Could not calculate factor. Using default.", Severity.Warning);
        }
    }

    public class ElementConfig
    {
        public string Name { get; set; } = "";
        public string Symbol { get; set; } = "";
        public string Unit { get; set; } = "%";
        public decimal OxideFactor { get; set; } = 1.0m;
        public decimal MinRange { get; set; }
        public decimal MaxRange { get; set; }
        public decimal DiffThreshold { get; set; } = 10m;
        public bool IsActive { get; set; } = true;
    }

    public record OxideReference(string Oxide, decimal Factor);
}
